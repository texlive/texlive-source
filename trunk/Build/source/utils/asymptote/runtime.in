// Check to see if an array element is initialized.
bool :arrayInitializedHelper(Int n, array *a)
{
  size_t len=checkArray(a);
  bool cyclic=a->cyclic();
  if(cyclic && len > 0) n=imod(n,len);
  else if(n < 0 || n >= (Int) len) return false;
  item&i=(*a)[(unsigned) n];
  return !i.empty();
